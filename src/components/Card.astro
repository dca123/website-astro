---
import Skill from "./Skill.astro";

export interface Props {
  title: string;
  description: string;
  skills: string[];
  slug: string;
  cover: string;
}

const { description, skills, title, slug, cover } = Astro.props;
---

<a href={"projects/" + slug} rel="prefetch">
  <div class="flex mt-3 justify-center min-w-full">
    <div class="bg-gray-700 rounded-lg min-w-full">
      <img
        src={cover}
        alt="placeholder"
        class="max-h-56 min-w-full rounded rounded-b-none object-cover"
      />
      <div class="py-2 px-4 mt-2">
        <h2 class="text-white text-xl font-semibold font-title">{title}</h2>
        <p class="text-slate-200 font-thin">{description}</p>
        <div class="flex space-x-2 mt-4 mb-2">
          {skills.map((skill) => <Skill title={skill} size="small" />)}
        </div>
      </div>
    </div>
  </div>
</a>
