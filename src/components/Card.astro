---
import Skill from "./Skill.astro";
import { Image } from "@astrojs/image/components";

export interface Props {
  title: string;
  description: string;
  skills: string[];
  slug: string;
  cover: string;
}

const { description, skills, title, slug, cover } = Astro.props;
---

<a href={"projects/" + slug} rel="prefetch">
  <div class="flex mt-3 justify-center min-w-full">
    <div class="bg-gray-700 rounded min-w-full">
      <Image
        src={cover}
        alt="placeholder"
        class="max-h-48 min-w-full rounded rounded-b-none"
        width={120}
        height={75}
        format="webp"
        fit="cover"
      />
      <div class="py-2 px-4 mt-2">
        <h2 class="text-white text-xl font-semibold font-title">{title}</h2>
        <p class="text-white">{description}</p>
        <div class="flex space-x-2 mt-4 mb-2">
          {skills.map((skill) => <Skill title={skill} size="small" />)}
        </div>
      </div>
    </div>
  </div>
</a>
