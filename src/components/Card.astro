---
export interface Props {
  title: string;
  description: string;
  skills: [string, string, string];
}

const { description, skills, title } = Astro.props;
---

<div class="flex mt-3 justify-center">
  <div class="bg-gray-700 rounded">
    <img
      src="https://picsum.photos/600"
      alt="placeholder"
      class="object-cover max-h-48 min-w-full rounded rounded-b-none"
    />
    <div class="py-2 px-4 mt-2">
      <h2 class="text-white text-xl font-semibold">{title}</h2>
      <p class="text-white">{description}</p>
      <div class="flex space-x-2 mt-4 mb-2">
        {
          skills.map((skill) => (
            <div class="text-white text-xs bg-slate-500 rounded-md px-2 py-1">
              {skill}
            </div>
          ))
        }
      </div>
    </div>
  </div>
</div>
