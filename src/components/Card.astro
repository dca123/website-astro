---
import Skill from "./Skill.astro";

export interface Props {
  title: string;
  description: string;
  skills: string[];
  slug: string;
  cover: string;
}

const { description, skills, title, slug } = Astro.props;
const cover = import.meta.env.PROD
  ? "https://via.placeholder.com/600"
  : Astro.props.cover;
---

<a href={"projects/" + slug} rel="prefetch">
  <div class="bg-gray-700 rounded-lg min-w-full flex flex-col h-full">
    <div class="aspect-h-3 aspect-w-4">
      <img
        src={cover}
        alt="placeholder"
        class="min-w-full rounded rounded-b-none object-cover"
      />
    </div>
    <div class="px-6 flex flex-col justify-between space-y-4 py-4 h-full">
      <div>
        <h2 class="text-white text-xl font-semibold font-title tracking-wide">
          {title}
        </h2>
        <p class="text-slate-200 font-thin">{description}</p>
      </div>
      <div class="flex space-x-2">
        {skills.map((skill) => <Skill title={skill} size="small" />)}
      </div>
    </div>
  </div>
</a>
