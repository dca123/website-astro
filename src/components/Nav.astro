---
const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.match(/\/[^/]+/g);
let path = "/";
if (currentPath) {
  path = currentPath[0];
}
---

<nav
  class="hidden md:flex space-x-6 pt-8 justify-end font-medium text-slate-200"
>
  <a
    class:list={["font-title", { "font-bold text-slate-50": path === "/" }]}
    href="/">Home</a
  >
  <a
    class:list={[
      "font-title ",
      { "font-bold text-slate-50": path === "/albums" },
    ]}
    href="/albums">Albums</a
  >
