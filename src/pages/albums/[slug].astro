---
import Layout from "../../layouts/Layout.astro";

export async function getStaticPaths() {
  return [
    {
      props: {
        title: "Wadduwa",
        description: "Trip to Wadduwa",
        photos: Array.from(
          {
            length: 10,
          },
          (_, i) => `https://picsum.photos/300`
        ),
      },
      params: {
        slug: "wadduwa",
      },
    },
  ];
}

const { title, description, photos } = Astro.props;
---

<Layout title={title}>
  <h1 class="font-title text-white tracking-wider text-xl">{title}</h1>
  <p class="text-slate-200">{description}</p>
  <div class="grid grid-cols-3 gap-4 mt-8">
    {
      photos.map((photo) => (
        <img src={photo} class="w-full object-cover rounded" />
      ))
    }
  </div>
</Layout>
